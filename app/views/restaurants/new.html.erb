
<div class="form">
<h1 class="m-2">CREATE A NEW RESTAURANT</h1>
<br>
<%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category %>
  <%= f.submit %>
<% end %>

<br>
<p><%= link_to 'Back To Main Page', restaurants_path, class:"btn btn-primary pt-10" %> <i class="fa-solid fa-house-crack"></i></p>
</div>
