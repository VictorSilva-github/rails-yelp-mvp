
<h2 class="m-2"><%= @restaurant.name %></h2>
<p></p>
<div class="form">
<p><strong>Restaurant: </strong> <%= @restaurant.name %> </p>
<p><strong>Address: </strong> <%= @restaurant.address %> </p>
<p><strong>Phone: </strong> <%= @restaurant.phone_number %> </p>
<p><strong>Category: </strong> <%= @restaurant.category %> </p>

</div>

<div>
  <%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant) %> |
  <%= link_to "Back to restaurants", restaurants_path %>

  <%= button_to "Destroy this restaurant", @restaurant, method: :delete %>


  <h2>Reviews</h2>

  <ul>
  <% @restaurant.reviews.each do |review| %>
      <li>
        <%= "Disse: #{review.content} "%>
        <%= "Nota: #{review.rating} "%>
        <%= link_to 'Remove', review_path(review), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      </li>
    <% end %>
  </ul>

  <%= link_to 'Add new review', new_restaurant_review_path(@restaurant) %>
</div>
